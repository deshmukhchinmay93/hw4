<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><%= @place.name %></h1>
  <%= link_to "New Entry", new_place_entry_path(@place), class: "btn btn-primary" %>
</div>

<div class="row">
  <% @entries.each do |entry| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <% if entry.image.attached? %>
          <%= image_tag url_for(entry.image), class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= entry.title %></h5>
          <p class="card-text"><%= entry.description %></p>
          <p class="card-text"><small class="text-muted">Occurred on: <%= entry.occurred_on %></small></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-4">
  <%= link_to "Back to Places", places_path, class: "btn btn-secondary" %>
</div>
